# Testing Environment Configuration
# This file contains testing-specific configuration
# Used for CI/CD and automated testing

ENVIRONMENT=testing
DEBUG=false
TESTING=true

# Testing Database (Isolated test database)
DATABASE_URL=sqlite+aiosqlite:///./test_mestore.db

# Testing Security (Deterministic for reproducible tests)
SECRET_KEY=test-jwt-secret-deterministic-for-testing-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=5
REFRESH_TOKEN_EXPIRE_MINUTES=30

# Testing Redis (Separate database for isolation)
REDIS_URL=redis://localhost:6379/10
REDIS_CACHE_URL=redis://localhost:6379/10
REDIS_SESSION_URL=redis://localhost:6379/11
REDIS_QUEUE_URL=redis://localhost:6379/12

# Testing CORS (Only test domains)
CORS_ORIGINS=http://localhost:5173,http://test.mestore.local,http://127.0.0.1:5173

# Testing Logging
LOG_LEVEL=WARNING
LOG_DIR=logs/testing

# Testing Rate Limiting (Lower limits for testing)
RATE_LIMIT_AUTHENTICATED_PER_MINUTE=50
RATE_LIMIT_ANONYMOUS_PER_MINUTE=10

# Testing External Services (Mock/disabled)
WOMPI_ENVIRONMENT=test
WOMPI_BASE_URL=https://sandbox.wompi.co/v1
WOMPI_PUBLIC_KEY=test-public-key
WOMPI_PRIVATE_KEY=test-private-key
SENDGRID_API_KEY=test-api-key
SMS_ENABLED=false
EMAIL_OTP_ENABLED=false

# Testing File Uploads
UPLOAD_DIR=uploads/testing
MAX_FILE_SIZE=1048576
WATERMARK_ENABLED=false

# Testing Security
ENABLE_IP_BLACKLIST=false
SUSPICIOUS_IPS=""