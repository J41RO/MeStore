[build-system]
requires = ["setuptools>=65.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "surgical-modifier"
version = "6.0.0"
description = "The most complete code modification tool in the world"
readme = "README.md"
license = {text = "MIT"}
authors = [
    {name = "Surgical Modifier Team", email = "team@surgicalmodifier.dev"},
]
maintainers = [
    {name = "Surgical Modifier Team", email = "team@surgicalmodifier.dev"},
]
keywords = ["code", "modification", "surgical", "programming", "development", "tools"]
classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "Topic :: Software Development :: Code Generators",
    "Topic :: Software Development :: Libraries :: Python Modules",
    "Topic :: Text Processing :: General",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
    "Programming Language :: Python :: 3 :: Only",
]
requires-python = ">=3.8"
dependencies = [
    "rich>=13.0.0",
    "click>=8.0.0",
    "colorama>=0.4.4",
    "pathlib2>=2.3.5",
]

[project.optional-dependencies]
future = [
    "openai>=1.0.0",
    "transformers>=4.20.0",
    "scikit-learn>=1.0.0",
    "matplotlib>=3.5.0",
    "plotly>=5.0.0",
    "pandas>=1.5.0",
    "numpy>=1.21.0",
]
dev = [
    "pytest>=7.0.0",    "psutil>=5.9.0",
    "pytest-cov>=4.0.0",
    "pytest-mock>=3.10.0",
    "black>=22.0.0",
    "flake8>=5.0.0",
    "mypy>=1.0.0",
    "isort>=5.12.0",
    "pre-commit>=3.0.0",
]
docs = [
    "sphinx>=5.0.0",
    "sphinx-rtd-theme>=1.0.0",
    "myst-parser>=0.18.0",
]

[project.scripts]
made = "surgical_modifier_cli:main"

[project.entry-points."surgical_modifier.plugins"]
# Future plugin system will register here

[project.urls]
Homepage = "https://github.com/surgical-modifier/surgical-modifier"
Documentation = "https://surgical-modifier.readthedocs.io/"
Repository = "https://github.com/surgical-modifier/surgical-modifier"
Issues = "https://github.com/surgical-modifier/surgical-modifier/issues"
Changelog = "https://github.com/surgical-modifier/surgical-modifier/blob/main/CHANGELOG.md"