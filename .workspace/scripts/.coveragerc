[run]
# Archivo principal a analizar
source = surgical_modifier_ultimate.py

# Incluir archivos de test en el análisis
include = 
    surgical_modifier_ultimate.py
    tests/*.py

# Excluir patrones específicos
omit = 
    */venv/*
    */env/*
    */.venv/*
    */site-packages/*
    */tests/conftest.py
    */tests/__init__.py
    */__pycache__/*
    */htmlcov/*

# Configuración de branches
branch = True
parallel = False

[report]
# Configuración del reporte
precision = 2
skip_covered = False
skip_empty = True
sort = Cover

# Mostrar líneas faltantes
show_missing = True

# Excluir del reporte
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
# Configuración para reporte HTML
directory = htmlcov
title = Surgical Modifier Ultimate - Coverage Report

[xml]
# Configuración para reporte XML
output = coverage.xml
