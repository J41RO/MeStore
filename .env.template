# ~/\.env.template
# ---------------------------------------------------------------------------------------------
# MESTOCKER - Environment Variables Template
# ---------------------------------------------------------------------------------------------
# Copiar a .env y personalizar valores para desarrollo local

# ===== APPLICATION SETTINGS =====
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production-please
API_V1_STR=/api/v1

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mestocker_dev
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mestocker_dev

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://:dev-redis-password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev-redis-password

# ===== JWT SETTINGS =====
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ===== EMAIL SETTINGS =====
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===== FRONTEND SETTINGS =====
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development

# ===== FILE UPLOAD SETTINGS =====
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,docx

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=/app/logs/mestocker.log

# ===== DEVELOPMENT TOOLS =====
ENABLE_CORS=true
ENABLE_DOCS=true
ENABLE_REDOC=true

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./data/chroma
