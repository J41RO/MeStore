[run]
source = app
omit =
    app/__init__.py
    app/middleware/__init__.py
    app/models/__init__.py
    app/core/__init__.py
    app/api/__init__.py
    */tests/*
    */__pycache__/*
    .venv/*
    */migrations/*
    */alembic/*
    app/main.py
    # Search/embedding services excluded due to dependency conflicts in testing
    app/services/search_service.py
    app/services/chroma_service.py
    app/services/embedding_sync_service.py
    app/api/v1/endpoints/search.py
    app/schemas/search.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    pass
    \.\.\.

skip_covered = false
precision = 2
show_missing = true
skip_empty = true

[html]
directory = htmlcov
title = MeStore Coverage Report

[paths]
source =
    app/
    */site-packages/app/
